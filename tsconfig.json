{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*",
    "playwright.config", "**/*.spec.js"],
  "exclude": [
    "node_modules",
    "allure-report",
    "allure-results",
    "playwright-report",
    "test-results"
  ]
}
